@model ChangePasswordModel

@{
    ViewData["Title"] = "ویرایش رمز عبور";
}

<form asp-action="ChangePassword">
    <admin-panel asp-name="user-pass" asp-icon="fa fa-key" asp-title="رمزعبور کاربر">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <admin-label asp-for="OldPassword" />
            <div class="col-md-9">
                <admin-input asp-for="OldPassword" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <admin-label asp-for="NewPassword" />
            <div class="col-md-9">
                <admin-input asp-for="NewPassword" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <admin-label asp-for="ConfirmPassword" />
            <div class="col-md-9">
                <admin-input asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <admin-button-save name="save" text="ذخیره" />
    </admin-panel>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
