@model NakhleNakhoda.Data.Models.DB.EmkanatHotel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
<h2>Edit</h2>

<h4>EmkanatHotel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Emkanat_ID" />
            <input type="hidden" asp-for="Emkanat_Icon" />
            <div class="form-group">
                <label asp-for="Emkanat_Name" class="control-label"></label>
                <input asp-for="Emkanat_Name" class="form-control" />
                <span asp-validation-for="Emkanat_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="~/upload/emkan/@Model.Emkanat_Icon" alt="Alternate Text" />
                <input type="file" name="Icon" class="form-control" required />

            </div>
            <div class="form-group">
                <label asp-for="Emkanat_IdHotel" class="control-label"></label>
                <select asp-for="Emkanat_IdHotel" class="form-control" asp-items="ViewBag.Emkanat_IdHotel"></select>
                <span asp-validation-for="Emkanat_IdHotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


