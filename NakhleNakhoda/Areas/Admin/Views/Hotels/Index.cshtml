@model IEnumerable<NakhleNakhoda.Data.Models.DB.Hotels>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Index</h2>
                    <p>
                        <a asp-action="Create">ثبت هتل جدید</a>
                    </p>
                    <table class="table table-bordered table-hover bg-dark">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name_Hotel)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Faal)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name_Hotel)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Faal)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Hotel_ID">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Hotel_ID">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Hotel_ID"><i class="fa fa-trash fa-2x " style="color:red"></i></a> |
                                        <a asp-action="Faal" asp-route-id="@item.Hotel_ID">فعال کردن</a>
                                        <a asp-action="Index" asp-route-id="@item.Hotel_ID" asp-controller="Tasavirhotels"><i class="fa fa-image fa-2x"></i></a>
                                        <a asp-action="Index" asp-route-id="@item.Hotel_ID" asp-controller="JozeyatHotels"><i class="fa fa-2x fa-paper-plane"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <p>
                        <a asp-controller="Hotels" asp-action="Create">ثبت هتل جدید</a>
                    </p>
                </div>

            </div>
           
        </div>
    </div>
</div>


