@model IEnumerable<NakhleNakhoda.Data.Models.DB.RezervHotel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Index</h2>
                    <table class="table table-bordered table-hover bg-dark">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_IDHotel)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_NameKhanevadgi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_Codemeli)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_Mobile)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_TeadadNafarat)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_TeadadOthagh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_Vorod)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_Khoroj)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_Mablagh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_Vazeyt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_Roz)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rezerv_IP)
                                </th>
                                <th>
                                    اقدامات
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_IDHotel)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_NameKhanevadgi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_Codemeli)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_Mobile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_TeadadNafarat)
                                    </td>   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_TeadadOthagh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_Vorod)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_Khoroj)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_Mablagh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_Vazeyt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_Roz)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rezerv_IP)
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Rezerv_ID">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Rezerv_ID"><i class="fa fa-trash fa-2x " style="color:red"></i></a> |
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
</div>



