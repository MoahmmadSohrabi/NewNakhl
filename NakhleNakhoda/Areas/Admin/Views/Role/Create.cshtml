@model RoleModel

@{
    ViewBag.PageTitle = "افزودن نقش جدید";
}

<form asp-action="Create">
    <div class="panel panel-inverse">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            </div>
            <h4 class="panel-title" style="font-weight: normal; font-size: 15px;">عملیات</h4>
        </div>
        <div class="panel-body">
            <div class="content-header clearfix" style="font-weight:lighter">
                <h4 class="float-right">
                    افزودن نقش جدید
                    <admin-button-back asp-action="List" />
                </h4>
                <div class="float-left">
                    <admin-button-save name="save" text="ذخیره" />
                    <admin-button-save name="save-continue" text="ذخیره و ادامه ویرایش" />
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

        </div>
    </div>
    <admin-panel asp-name="role-info" asp-icon="fa fa-info" asp-title="اطلاعات نقش">
        <div class="form-group row">
            <admin-label asp-for="Name" />
            <div class="col-md-9">
                <admin-input asp-for="Name" asp-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <admin-label asp-for="Description" />
            <div class="col-md-9">
                <admin-input asp-for="Description" asp-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </admin-panel>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}