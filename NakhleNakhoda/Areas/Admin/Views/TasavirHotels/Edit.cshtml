@model NakhleNakhoda.Data.Models.DB.TasvirHotel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
<h2>Edit</h2>

<h4>TasavirHotel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tasavir_ID" />
            <input type="hidden" name="Tasavir_Name" value="@Model.Tasavir_Name" />
            <img src="~/upload/img/@Model.Tasavir_Name" style="height:50px;" alt="Alternate Text" />
            <br />
            <div class="form-group">
               
                <input name="Tasvir" type="file" class="form-control" required />
              
            </div>
            <div class="form-group">
                <label asp-for="Tasavir_IDHotel" class="control-label"></label>
                <select asp-for="Tasavir_IDHotel" class="form-control" asp-items="ViewBag.Tasavir_IDHotel"></select>
                <span asp-validation-for="Tasavir_IDHotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Tasavir_Asli" /> @Html.DisplayNameFor(model => model.Tasavir_Asli)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


                </div>
            </div>
        </div>
    </div>
</div>
