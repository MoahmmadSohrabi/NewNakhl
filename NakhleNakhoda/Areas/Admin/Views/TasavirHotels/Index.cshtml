@model IEnumerable<NakhleNakhoda.Data.Models.DB.TasvirHotel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
<h2>Index</h2>

<p>
    <a asp-area="Admin" asp-controller="TasavirHotels" asp-action="Create">ثبت تصاویر</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tasavir_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasavir_Asli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hoteltasvir)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="/upload/img/@item.Tasavir_Name" style="height:40px;" alt="Alternate Text" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tasavir_Asli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hoteltasvir.Name_Hotel)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Tasavir_ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Tasavir_ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Tasavir_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

                </div>

            </div>

        </div>
    </div>
</div>


