@using Microsoft.AspNetCore.Http
@model NakhleNakhoda.Data.Models.ViewModel.User.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="rtl">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
        <meta name="author" content="Coderthemes">

        <!-- App Favicon -->
        <link rel="shortcut icon" href="~/MyAdmin/assets/images/favicon.ico">

        <!-- App title -->
        <title>صفحه ی ورود</title>

        <!-- App CSS -->
        <link href="~/MyAdmin/assets/css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />
        <link href="~/MyAdmin/assets/css/core.css" rel="stylesheet" type="text/css" />
        <link href="~/MyAdmin/assets/css/components.css" rel="stylesheet" type="text/css" />
        <link href="~/MyAdmin/assets/css/icons.css" rel="stylesheet" type="text/css" />
        <link href="~/MyAdmin/assets/css/pages.css" rel="stylesheet" type="text/css" />
        <link href="~/MyAdmin/assets/css/menu.css" rel="stylesheet" type="text/css" />
        <link href="~/MyAdmin/assets/css/responsive.css" rel="stylesheet" type="text/css" />

        <!-- HTML5 Shiv and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->

        <script src="~/MyAdmin/assets/js/modernizr.min.js"></script>
        
    </head>
    <body>

        <div class="account-pages"></div>
        <div class="clearfix"></div>
        <div class="wrapper-page">
            <div class="text-center">
                <a href="/home/index" class="logo"><span>نخل <span>ناخدا</span></span></a>
                <h5 class="text-muted m-t-0 font-600">مجموعه ی بوم گردی گردشگری واقع در جزیره ی زیبای قشم</h5>
            </div>
        	<div class="m-t-40 card-box">
                <div class="text-center">
                    <h4 class="text-uppercase font-bold m-b-0">ورود</h4>
                </div>
                 @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-success">
                <p class="help-block">ورود با موفقیت انجام شد</p>
            </div>

            <script>
                // Your delay in milliseconds
                var delay = 3000; 
                setTimeout(function () { window.location = "/home/index"; }, delay);
            </script>
        }
        
        @if (ViewBag.EditProfile==true)
        {
            <div class="alert alert-warning">
بدلیل ویرایش پروفایل و بارگزاری مجدد اطلاعات لطفا مجدد لاگین کنید
            </div>
        }
                <div class="panel-body">
                    <form class="form-horizontal m-t-20" asp-controller="account" asp-action="Login2" method="post">

                        <div class="form-group ">
                            <div class="col-xs-12">
                                <input asp-for="Email" class="form-control" type="text" required="" placeholder="ایمیل">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <input asp-for="Password" class="form-control" type="password" required="" placeholder="رمز عبور">
                            </div>
                        </div>

                        <div class="form-group ">
                            <div class="col-xs-12">
                                <div class="checkbox checkbox-custom">
                                    <input asp-for="RememberMe" id="checkbox-signup" type="checkbox">
                                    <label for="checkbox-signup">
                                        مرا به خاطر بسپار
                                    </label>
                                </div>

                            </div>
                        </div>

                        <div class="form-group text-center m-t-30">
                            <div class="col-xs-12">
                                <button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit">ورود</button>
                            </div>
                        </div>

                        <div class="form-group m-t-30 m-b-0">
                            <div class="col-sm-12">
                                <a href="/ForgotPassword" class="text-muted"><i class="fa fa-lock m-r-5"></i> آیا رمز خود را فراموش کرده اید؟</a>
                            </div>
                        </div>
                    </form>

                </div>
            <div class="row">
                <div class="col-sm-12 text-center">
                    <p class="text-muted">حساب کاربری ندارید? <a asp-controller="account" asp-action="register" class="text-primary m-l-5"><b>ثبت نام</b></a></p>
                    <a asp-controller="home" asp-action="index" class="info m-t-10">صفحه ی اصلی</a>
                </div>
            </div>
            </div>
            <!-- end card-box-->

            
            
        </div>
        <!-- end wrapper page -->
        

        
    	<script>
            var resizefunc = [];
        </script>

        <!-- jQuery  -->
        <script src="~/MyAdmin/assets/js/jquery.min.js"></script>
        <script src="~/MyAdmin/assets/js/bootstrap-rtl.min.js"></script>
        <script src="~/MyAdmin/assets/js/detect.js"></script>
        <script src="~/MyAdmin/assets/js/fastclick.js"></script>
        <script src="~/MyAdmin/assets/js/jquery.slimscroll.js"></script>
        <script src="~/MyAdmin/assets/js/jquery.blockUI.js"></script>
        <script src="~/MyAdmin/assets/js/waves.js"></script>
        <script src="~/MyAdmin/assets/js/wow.min.js"></script>
        <script src="~/MyAdmin/assets/js/jquery.nicescroll.js"></script>
        <script src="~/MyAdmin/assets/js/jquery.scrollTo.min.js"></script>

        <!-- App js -->
        <script src="~/MyAdmin/assets/js/jquery.core.js"></script>
        <script src="~/MyAdmin/assets/js/jquery.app.js"></script>
	
	</body>
</html>