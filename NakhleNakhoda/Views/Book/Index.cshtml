@model BookModel
<div class="inner-banner inner-bg5">
    <div class="container">
        <div class="inner-title">
            <ul>
                <li>
                    @Html.ActionLink("خانه","Index","Home")
                </li>
                <li><i class='bx bx-chevron-left'></i></li>
                <li>پذیرش</li>
            </ul>
            <h3>پذیرش</h3>
        </div>
    </div>
</div>

<div class="book-area pt-100 pb-70">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="book-img">
                    <img src="~/img/book-img.jpg" alt="Images">
                    <div class="book-shape">
                        <img src="~/img/shape/shape1.png" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="booking-form">
                    <h3>برگه رزرو </h3>
                    <form method="post">
                        <div class="row align-items-center">
                            <div class="col-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="@Model.Name">نام شما</label>
                                    <input asp-for="@Model.Name" type="text" class="form-control" required data-error="لطفا نام خود را وارد کنید" placeholder="نام شما">
                                    <i class='bx bx-user'></i>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="@Model.Email">ایمیل شما</label>
                                    <input asp-for="@Model.Email" type="email" class="form-control text-right" required data-error="لطفا ایمیل خود را وارد کنید" placeholder="ایمیل شما">
                                    <i class='bx bx-mail-send'></i>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="@Model.FromDate">تاریخ ورود</label>
                                    <div class="input-group date">
                                        <input asp-for="@Model.FromDate" autocomplete="off" id="FromDate" type="text" class="form-control" placeholder="روز/ماه/سال">
                                        <span class="input-group-addon"></span>
                                    </div>
                                    <i class='bx bxs-calendar'></i>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="@Model.ToDate">زمان خروج</label>
                                    <div class="input-group">
                                        <input asp-for="@Model.ToDate" autocomplete="off" id="ToDate" type="text" class="form-control" placeholder="روز/ماه/سال">
                                        <span class="input-group-addon"></span>
                                    </div>
                                    <i class='bx bxs-calendar'></i>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group dropdown">
                                    <label>مهمان</label>
                                    <div id="GuestQty" type="button" class="form-control text-right stepper" style="line-height: 40px;" data-label="مهمان" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                        @Model.GuestQty مهمان
                                    </div>
                                    <div class="dropdown-menu dropdown-inline" style="width:300px;">
                                        <div class="p-2">
                                            <div class="d-flex align-items-center justify-content-between mb-4 lg:mb-5 last:mb-2 mt-2">
                                                <div class="flex-1 pl-2 text-3 relative">
                                                    <span>بزرگسال</span>
                                                    <span class="text-grays-400 mr-2">(۱۲ سال به بالا)</span>
                                                </div>
                                                <div class="stepper-input-container">
                                                    <button type="button"
                                                            class="stepper-button stepper-button-decrement"
                                                            onclick="setNumber(event)"
                                                            data-input-id="adults"
                                                            data-operation="decrement">
                                                    </button>
                                                    <div class="stepper-input">
                                                        <input type="number"
                                                               id="adults"
                                                               asp-for="@Model.AdultQty"
                                                               class="stepper-input-text-box"
                                                               min="1"
                                                               max="50"
                                                               oninput="handleNumberInput()"
                                                               onblur="handleNumberInputBlur(event)"
                                                               data-step="1" />
                                                    </div>
                                                    <button type="button"
                                                            class="stepper-button stepper-button-increment"
                                                            onclick="setNumber(event)"
                                                            data-input-id="adults"
                                                            data-operation="increment">
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between mb-4 lg:mb-5 last:mb-2 mt-2">
                                                <div class="flex-1 pl-2 text-3 relative">
                                                    <span>کودک</span>
                                                    <span class="text-grays-400 mr-2">(۲ تا ۱۲ سال)</span>
                                                </div>
                                                <div class="stepper-input-container">
                                                    <button type="button"
                                                            class="stepper-button stepper-button-decrement"
                                                            onclick="setNumber(event)"
                                                            data-input-id="childs"
                                                            data-operation="decrement">
                                                    </button>
                                                    <div class="stepper-input">
                                                        <input type="number"
                                                               id="childs"
                                                               asp-for="@Model.ChildQty"
                                                               class="stepper-input-text-box"
                                                               min="0"
                                                               max="100"
                                                               oninput="handleNumberInput()"
                                                               onblur="handleNumberInputBlur(event)"
                                                               data-step="1" />
                                                    </div>
                                                    <button type="button"
                                                            class="stepper-button stepper-button-increment"
                                                            onclick="setNumber(event)"
                                                            data-input-id="childs"
                                                            data-operation="increment">
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between mb-4 lg:mb-5 last:mb-2 mt-2">
                                                <div class="flex-1 pl-2 text-3 relative">
                                                    <span>نوزاد</span>
                                                    <span class="text-grays-400 mr-2">(۱۰ روز تا ۲ سال)</span>
                                                </div>
                                                <div class="stepper-input-container">
                                                    <button type="button"
                                                            class="stepper-button stepper-button-decrement"
                                                            onclick="setNumber(event)"
                                                            data-input-id="baby"
                                                            data-operation="decrement">
                                                    </button>
                                                    <div class="stepper-input">
                                                        <input type="number"
                                                               id="baby"
                                                               asp-for="@Model.BabyQty"
                                                               class="stepper-input-text-box"
                                                               min="0"
                                                               max="100"
                                                               oninput="handleNumberInput()"
                                                               onblur="handleNumberInputBlur(event)"
                                                               data-step="1" />
                                                    </div>
                                                    <button type="button"
                                                            class="stepper-button stepper-button-increment"
                                                            onclick="setNumber(event)"
                                                            data-input-id="baby"
                                                            data-operation="increment">
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group dropdown">
                                    <label>اتاق</label>
                                    <div id="RoomQty" type="button" class="form-control text-right stepper" style="line-height: 40px;" data-label="اتاق" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                        0 اتاق
                                    </div>
                                    <div class="dropdown-menu dropdown-inline" style="width:300px;">
                                        <div class="p-2">
                                            @for (int i = 0; i < Model.RoomCategories.Count; i++)
                                            {
                                                <div class="d-flex align-items-center justify-content-between mb-4 lg:mb-5 last:mb-2 mt-2">
                                                    <div class="flex-1 pl-2 text-3 relative">
                                                        <span>@Model.RoomCategories[i].Name</span>
                                                    </div>
                                                    @Html.HiddenFor(m => m.RoomCategories[i].Id)
                                                    <div class="stepper-input-container">
                                                        <button type="button"
                                                                class="stepper-button stepper-button-decrement"
                                                                onclick="setNumber(event)"
                                                                data-input-id="@Model.RoomCategories[i].ClientId"
                                                                data-operation="decrement">
                                                        </button>
                                                        <div class="stepper-input">
                                                            @Html.TextBoxFor(m =>
                                                        m.RoomCategories[i].Qty,
                                                        new {
                                                        @class = "stepper-input-text-box",
                                                        min = "0",
                                                        max = Model.RoomCategories[i].Rooms.Count,
                                                        oninput = "handleNumberInput()",
                                                        onblur = "handleNumberInputBlur(event)",
                                                        data_step = "1",
                                                        id = Model.RoomCategories[i].ClientId,
                                                        })
                                                        </div>
                                                        <button type="button"
                                                                class="stepper-button stepper-button-increment"
                                                                onclick="setNumber(event)"
                                                                data-input-id="@Model.RoomCategories[i].ClientId"
                                                                data-operation="increment">
                                                        </button>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="head-book">
                                    امکانات مجموعه گردشگری
                                </div>
                            </div>
                            @for (int i = 0; i < Model.RoomFacilities.Count; i++)
                            {
                                <div class="col-12">
                                    @if (Model.RoomFacilities[i].Price > 0)
                                    {
                                        <div class="form-check d-flex">
                                            @Html.HiddenFor(m => m.RoomFacilities[i].Id)
                                            @Html.CheckBoxFor(m => m.RoomFacilities[i].Checked, new { @class = "form-check-input" })
                                            <label class="form-check-label flex-grow-1 ms-2" asp-for="@Model.RoomFacilities[i].Checked">
                                                @Model.RoomFacilities[i].Name
                                            </label>
                                            <span>@Model.RoomFacilities[i].Price.ToString("N0") تومان</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <label>
                                            @Model.RoomFacilities[i].Name
                                        </label>
                                    }
                                    <div class="form-text mb-4">
                                        @Model.RoomFacilities[i].Description
                                    </div>
                                </div>
                            }

                            <div class="col-lg-12 col-md-12">
                                <button type="submit" class="default-btn btn-bg-two border-radius-5">
                                    رزرو کن
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var toDate, fromDate;
        toDate = $("#ToDate").persianDatepicker({
            initialValueType: 'persian',
            format: "YYYY/MM/DD",
            initialValue: true,
            autoClose: true,
            onSelect: function (unix) {
                toDate.touched = true;
                if (fromDate && fromDate.options && fromDate.options.maxDate != unix) {
                    var cachedValue = fromDate.getState().selected.unixDate;
                    fromDate.options = { maxDate: unix };
                    if (fromDate.touched) {
                        fromDate.setDate(cachedValue);
                    }
                }
            }
        });
        fromDate = $("#FromDate").persianDatepicker({
            initialValueType: 'persian',
            format: "YYYY/MM/DD",
            initialValue: true,
            autoClose: true,
            onSelect: function (unix) {
                fromDate.touched = true;
                if (toDate && toDate.options && toDate.options.minDate != unix) {
                    var cachedValue = toDate.getState().selected.unixDate;
                    toDate.options = { minDate: unix };
                    if (toDate.touched) {
                        toDate.setDate(cachedValue);
                    }
                }
            }
        });
        let unix = new persianDate().add('days', 1).unix() * 1000;
        toDate.options = { minDate: unix };
        fromDate.options = { minDate: unix };

    </script>
}