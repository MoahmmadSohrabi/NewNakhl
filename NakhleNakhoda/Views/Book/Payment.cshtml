@using NakhleNakhoda.Common
@model UserBookModel
<div class="inner-banner inner-bg5">
    <div class="container">
        <div class="inner-title">
            <ul>
                <li>
                    @Html.ActionLink("خانه","Index","Home")
                </li>
                <li><i class='bx bx-chevron-left'></i></li>
                <li>پرداخت</li>
            </ul>
            <h3>پرداخت</h3>
        </div>
    </div>
</div>
@if (Model != null)
{
    <form method="post" class="form-payment">
        <div class="container my-5">
            <div class="row">
                <div class="col-12">
                    <label class="display-6 pb-5">پرداخت</label>
                </div>
                <div class="col-lg-4">
                    <label>از تاریخ:</label>
                    <span>@Model.FromDate.ToString("yyyy/dd/MM")</span>
                </div>
                <div class="col-lg-4">
                    <label>تا تاریخ:</label>
                    <span>@Model.ToDate.ToString("yyyy/dd/MM")</span>
                </div>
                <div class="col-lg-4">
                    <label>قیمت:</label>
                    <span>@Model.Price.ToString("N0")</span>
                </div>
                <div class="col-lg-4">
                    <label>تعداد:</label>
                    <span>@Model.Guests</span>
                </div>
                <div class="col-lg-4">
                    <label>وضعیت:</label>
                    <span>@Model.StatusText</span>
                </div>

                <div class="col-12">
                    <label>اتاق ها</label>
                </div>
                @foreach (var item in Model.BookRoomCategories)
                {
                    <div class="col-lg-4">
                        <label>اتاق:</label>
                        <span>@item.RoomCategoryName</span>
                    </div>

                    <div class="col-lg-4">
                        <label>شماره:</label>
                        <span>@item.RoomName</span>
                    </div>

                    <div class="col-lg-4">
                        <label>قیمت:</label>
                        <span>@item.RoomPrice.ToString("N0")</span>
                    </div>
                }

                <div class="col-12">
                    <label>امکانات</label>
                </div>
                @foreach (var item in Model.RoomFacilities)
                {
                    <div class="col-lg-3">
                        <span>@item.Name</span>
                    </div>

                    <div class="col-lg-3">
                        <label>قیمت:</label>
                        <span>@item.Price.ToString("N0")</span>
                    </div>
                }
            </div>
            @if (!Model.IsPaid && Model.Status != BookStatus.Cancel)
            {
                <div class="row pt-5">
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary">پرداخت</button>
                    </div>
                </div>
            }
        </div>
    </form>
}
else
{
    <div class="container my-5">
        <div class="row">
            <div class="col-12 text-center">
                مقداری یافت نشد.
            </div>

            <div class="col-12 text-center">
                <a href="~/">بازگشت</a>
            </div>
        </div>
    </div>
}