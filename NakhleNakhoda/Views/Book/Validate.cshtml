@model UserBookModel
<div class="inner-banner inner-bg5">
    <div class="container">
        <div class="inner-title">
            <ul>
                <li>
                    @Html.ActionLink("خانه","Index","Home")
                </li>
                <li><i class='bx bx-chevron-left'></i></li>
                <li>پرداخت</li>
            </ul>
            <h3>پرداخت</h3>
        </div>
    </div>
</div>

<div class="container my-5 form-payment">
    <div class="row">
        <div class="col-lg-4">
            <label>وضعیت پرداخت:</label>
            <span>@(Model.IsPaid ? "پرداخت شده" : "پرداخت نشده")</span>
        </div>
        <div class="col-lg-4">
            <label>مبلغ:</label>
            <span>@Model.Price.ToString("N0")</span>
        </div>
        @if (Model.IsPaid)
        {
            <div class="col-lg-4">
                <label>کد رهگیری:</label>
                <span>@Model.Payment?.RefId</span>
            </div>
        }
    </div>
    <div class="row pt-5">
        <div class="col-12 text-center">
            <a href="~/" class="btn btn-outline-primary">بازگشت</a>
        </div>
    </div>
</div>